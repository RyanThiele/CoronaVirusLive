<UserControl
    x:Class="CoronaVirusLive.UWP.XamarinMapOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:local="using:CoronaVirusLive.Uwp"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="100"
    d:DesignWidth="300">
    <StackPanel Opacity="0.5" Background="White">
        <StackPanel Orientation="Horizontal">
            <local:AmountControl x:Name="ConfirmedAmountControl" Title="Confirmed:" ChangeType="Up" />
            <local:AmountControl x:Name="DeathAmountControl" Title="Deaths:" ChangeType="Up" />
            <local:AmountControl x:Name="RecoveredAmountControl" Title="Recovered:" ChangeType="Up" />
        </StackPanel>
        <TextBlock x:Name="Address" Text="Address" />
    </StackPanel>
</UserControl>
